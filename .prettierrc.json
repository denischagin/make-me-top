{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "singleAttributePerLine": true,
  "importOrder": [
    "^react(.*)",
    "<THIRD_PARTY_MODULES>",
    "@/(.*)",
    "@app(.*)",
    "@shared(.*)",
    "@entities(.*)",
    "@widgets(.*)",
    "@pages(.*)",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
