{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "singleAttributePerLine": true,
  "importOrder": [
    "^react(.*)",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^@app/(.*)$",
    "^@entities/(.*)$",
    "^@widgets/(.*)$",
    "^@pages/(.*)$",
    "^@shared/images/(.*)$",
    "^@shared/utils/(.*)$",
    "^(@shared/(.*)/interfaces)|(./interfaces)$",
    "^@shared/types/(.*)$",
    "^@shared/(.*)$",
    "./styles",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "bracketSpacing": true
}
